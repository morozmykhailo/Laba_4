<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Блок введення даних -->
            <RowDefinition Height="Auto"/>
            <!-- Кнопки -->
            <RowDefinition Height="*"/>
            <!-- Список і результати -->
        </Grid.RowDefinitions>

        <!-- Блок введення параметрів продукту -->
        <GroupBox Header="Дані продукту" Grid.Row="0" Margin="0,0,0,10">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Тип продукту -->
                <TextBlock Text="Тип продукту:" VerticalAlignment="Top"/>
                <ComboBox x:Name="ProductTypeComboBox"
                          Grid.Column="1"
                          Margin="5,0,0,0"
                          SelectedIndex="0">
                    <ComboBoxItem Content="Fruit"/>
                    <ComboBoxItem Content="Vegetable"/>
                </ComboBox>

                <!-- Назва -->
                <TextBlock Grid.Column="0"
                           Text="Назва:" VerticalAlignment="Center"/>
                <TextBox x:Name="NameTextBox"
                         Grid.Column="1" Margin="5,30,0,0"/>

                <!-- Калорії на 100 г -->
                <TextBlock Grid.Column="0" Margin="0,60,0,0"
                           Text="Ккал на 100 г:" VerticalAlignment="Center"/>
                <TextBox x:Name="CaloriesTextBox"
                         Grid.Column="1" Margin="5,60,0,0"/>

                <!-- Дата придатності -->
                <TextBlock Grid.Column="2" Margin="10,0,0,0"
                           Text="Термін придатності:" VerticalAlignment="Top" Height="30"/>
                <DatePicker x:Name="ExpirationDatePicker"
                            Grid.Column="3" Margin="5,0,0,0"
                            SelectedDate="{x:Static sys:DateTime.Now}"
                            xmlns:sys="clr-namespace:System;assembly=mscorlib"/>

                <!-- Країна або спосіб вирощування -->
                <TextBlock Grid.Column="2" Margin="10,30,0,0"
                           Text="Країна / спосіб:" VerticalAlignment="Center"/>
                <TextBox x:Name="ExtraFieldTextBox"
                         Grid.Column="3" Margin="5,30,0,0"
                         ToolTip="Для фруктів - країна походження, для овочів - спосіб вирощування"/>
            </Grid>
        </GroupBox>

        <!-- Кнопки керування -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
            <Button x:Name="AddProductButton"
                    Content="Додати продукт"
                    Width="140" Margin="0,0,10,0"
                    Click="AddProductButton_Click"/>
            <Button x:Name="CalculateButton"
                    Content="Розрахувати середні калорії"
                    Width="220"
                    Click="CalculateButton_Click"/>
        </StackPanel>

        <!-- Список продуктів та результати обчислень -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Список продуктів -->
            <GroupBox Header="Список продуктів" Grid.Column="0" Margin="0,0,10,0">
                <ListBox x:Name="ProductsListBox"
                         Margin="5"/>
            </GroupBox>

            <!-- Результати середніх значень -->
            <GroupBox Header="Результати обчислень" Grid.Column="1">
                <StackPanel Margin="10">
                    <TextBlock Text="Середня калорійність фруктів:"/>
                    <TextBlock x:Name="AvgFruitsTextBlock"
                               FontWeight="Bold" Margin="0,0,0,10"/>

                    <TextBlock Text="Середня калорійність овочів:"/>
                    <TextBlock x:Name="AvgVegetablesTextBlock"
                               FontWeight="Bold"/>
                </StackPanel>
            </GroupBox>
        </Grid>

    </Grid>
</Window>
